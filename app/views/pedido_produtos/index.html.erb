<div class="page-header">
  <%= link_to new_pedido_pedido_produto_path(@pedido), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Pedido produto
  <% end %>
  <h1>Listando pedido_produtos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Pedido</th>
            <th>Produto</th>
            <th>Unidade</th>
            <th>Quantidade</th>
            <th>Valor unitario</th>
            <th>Valor total item</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @pedido_produtos) do |pedido_produto| %>
            <td><%= pedido_produto.pedido.id %></td>
            <td><%= pedido_produto.produto.nome %></td>
            <td><%= pedido_produto.unidade %></td>
            <td><%= pedido_produto.quantidade %></td>
            <td><%= pedido_produto.valor_unitario %></td>
            <td><%= pedido_produto.valor_total_item %></td>
            <td><%= link_to 'Show', pedido_pedido_produto_path(@pedido,pedido_produto) %></td>
        <td><%= link_to 'Edit', edit_pedido_pedido_produto_path(@pedido,pedido_produto) %></td>
        <td><%= link_to 'Destroy', pedido_pedido_produto_path(@pedido,pedido_produto), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
